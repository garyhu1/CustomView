<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ScoreTrend">
        <attr name="max_score" format="integer"/>
        <attr name="min_score" format="integer"/>
        <attr name="broken_line_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_cropType" format="enum">
            <enum name="centerTop" value="0"/>
            <enum name="leftTop" value="1"/>
            <enum name="center" value="2"/>
        </attr>
        <attr name="civ_outCircleColor" format="color"/>
        <attr name="civ_outCircleWidth" format="dimension"/>
        <attr name="civ_innerCircleColor" format="color"/>
        <attr name="civ_innerCircleWidth" format="dimension"/>
    </declare-styleable>
    <!-- RoundImageView的自定义属性 -->
    <attr name="borderRadius" format="dimension" />
    <attr name="type">
        <enum name="circle" value="0" />
        <enum name="round" value="1" />
    </attr>
    <declare-styleable name="RoundImageView">
        <attr name="borderRadius" />
        <attr name="type" />
    </declare-styleable>

    <!-- CustomProgressBar的自定义属性-->
    <attr name="firstColor" format="color|reference"/>//第一个圆环的颜色
    <attr name="secondColor" format="color|reference"/>//第二个圆环的颜色
    <attr name="circleWidth" format="dimension"/>//圆环的宽度
    <attr name="progressSpeed" format="integer"/>//进度速度
    <declare-styleable name="CustomProgressBar">
        <attr name="firstColor"/>
        <attr name="secondColor"/>
        <attr name="circleWidth"/>
        <attr name="progressSpeed"/>
    </declare-styleable>

    <declare-styleable name="ColorArcProgressBar">
        <attr name="back_color" format="color"/>
        <attr name="front_color1" format="color"/>
        <attr name="front_color2" format="color"/>
        <attr name="front_color3" format="color"/>
        <attr name="back_width" format="dimension"/>
        <attr name="front_width" format="dimension"/>
        <attr name="is_need_title" format="boolean"/>
        <attr name="is_need_content" format="boolean"/>
        <attr name="is_need_unit" format="boolean"/>
        <attr name="is_need_dial" format="boolean"/>
        <attr name="string_title" format="string"/>
        <attr name="string_unit" format="string"/>
        <attr name="total_engle" format="integer"/>
        <attr name="current_value" format="float"/>
        <attr name="max_value" format="float"/>

    </declare-styleable>


</resources>